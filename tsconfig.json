{
  "compilerOptions": {
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./.tmp/build/",
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2020", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@assets/*": [
        "./assets/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true
    }
  },
  "files": ["./src/visual.ts"],
  "include": ["./src/**/*.ts", "./src/**/*.vue"],
  "exclude": [
    "webpack.config.dev.ts"
  ]
}
